<UserControl x:Class="WPFSmallWorld.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="495" d:DesignWidth="660">

    <UserControl.Background>
        <ImageBrush ImageSource="homescreen.jpg" Opacity="0.8"></ImageBrush>
    </UserControl.Background>


    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="220" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock FontWeight="Bold" FontSize="14" TextAlignment="Center">SmallWorld</TextBlock>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel>
                <Button Content="Nouveau" Click="nouveau" Margin="20" Width="150"/>
                <Button Content="Charger" Click="charger" Margin="20" Width="150"/>
                <Button Content="Quitter" Click="quitter" Margin="20" Width="150"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
    

